<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="15dp"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/project_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="30dp"
        android:src="@drawable/ic_kotlin_svgrepo_com" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginStart="-60dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/secondary"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="80dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/stanley"
                    android:text="Portfolio App"
                    android:textColor="@color/subtext"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:src="@android:drawable/ic_menu_sort_by_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/tech_stack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/restora"
                android:text="Tech Stack: Kotlin"
                android:textColor="@color/subtext"
                android:textSize="10sp"
                android:textStyle="bold" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#03A9F4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/type_icon"
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_person_svgrepo_com"
                    />
                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/restora"
                    android:text="Individual"
                    android:textColor="@color/subtext"
                    android:gravity="center"
                    android:textSize="10sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>